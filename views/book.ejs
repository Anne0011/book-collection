<!DOCTYPE html>
<html>
	<head>
		<title>BookKeeper</title>
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>

	<body>
		<div class="container" id="BP">

			<div class="row">
				<!-- <div class="col-sm-1">
				</div> -->

				<div class="col-sm-11">
					<h1><%= greeting %></h1>

					<span class="label label-success">User: <%= username %></span>

					<table class="table table-hover">
					  <tbody>
					  	<tr>
					  		<!-- <th><input type="checkbox" id="selectAll"></th> -->
					  		<th></th>
					  		<th>Title</th>
					  		<th>Author</th>
					  		<th>Rating</th>
					  		<th>Category</th>
					  		<th></th> <!-- column for Edit -->
					  		<th></th> <!-- column for Remove -->
					  	</tr>

			      <% books.forEach(function(book){ %>
						  	<tr class="bookItem" id="book_<%= book._id %>">
						  		<!-- <td><input type="checkbox" id="<%= book._id %>"></td> -->
						  		<td><span class="glyphicon glyphicon-plus-sign" aria-hidden="true" id="<%= book._id %>"></span></td>
					  	    <td> <em> <%= book.title %> </em>
										<div class="additionalContent showOrHide_<%= book._id %>">
							  	    <img src="http://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg" />
										</div>
					  	    </td>
					  	    <td> <%= book.author %> <br>
					  	    	<div class="additionalContent showOrHide_<%= book._id %>">
					  	    		<p>Publisher: <%= book.publisher %></p>
					  	    		<p>ISBN: <%= book.isbn %></p>
					  	    		<p>Dewey Decimal: <%= book.ddc %></p>
					  	    	</div>
						  	  </td>
					  	    <td> <span class="label label-primary"> <%= book.rating %> </span> </td>
					  	    <td> <%= book.category %> <br>
					  	    	<div class="additionalContent showOrHide_<%= book._id %>">
							  	    <p>Review: <%= book.review %></p>
					  	    	</div>
					  	    </td>
					  	    <td><button type="button" class="btn btn-default btn-xs btn-success edit-btn" id="<%= book._id %>">Edit</button></td>
					  	    <td><button type="button" class="btn btn-default btn-xs btn-danger remove-btn" id="<%= book._id %>">Remove</button></td>

						  	</tr>
			      <% }) %>
					  </tbody>
					</table>

				</div>

				<div class="col-sm-1">
					<!-- <input type="submit" class="btn btn-primary btn-sm pull-right" id="addButton" value="Add more items"> -->
					<a href="/index"><button type="button" class="btn btn-primary btn-sm">Add more items</button></a>
					<p></p>
					<a href="/users/profile"><button type="button" class="btn btn-primary btn-sm">View user profile</button></a>
					<p></p>
					<a href="/users/logout"><button type="button" class="btn btn-primary btn-sm">Logout</button></a>
				</div>
			</div>
		</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
		<script type="text/javascript" src="/javascripts/main.js"></script>
	</body>

</html>
